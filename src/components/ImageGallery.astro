---
export interface Props {
  images: string[];
  title: string;
}

const { images, title } = Astro.props;
---

<h1 class="lapcim">{title}</h1>

<div class="images">
  {
    images.map((image, index) => (
      <img
        src={image}
        alt={`${title} ${index + 1}`}
      />
    ))
  }
</div>

<style>
  .images {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    padding: 0 0 1rem 0;
    @media only screen and (max-width: 300px) {
      padding: 0 0 1rem 0;
    }

    div {
      background-color: #324026;
      padding: 1rem;
      text-align: center;
    }

    img {
      max-height: 300px;
      max-width: 300px;

      @media only screen and (max-width: 300px) {
        width: 100%;
      }
    }
  }
</style>
