---
export interface Props {
  href: string;
  title: string;
  text: string;
  icon: any;
}

const { href, title, text, icon: Icon } = Astro.props;
---

<div class="flex flex-col gap-2">
  <p class="text-xl font-bold text-base-content">
    {title}
  </p>
  <div class="flex gap-2 items-center">
    <Icon class="size-4 text-base-content/70" />
    <a
      class="text-base-content/70 hover:link hover:text-base-content"
      href={href}
    >
      {text}
    </a>
  </div>
</div>
