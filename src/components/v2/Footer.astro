---
import { Copyright, Mail, Phone } from "@lucide/astro";
---

<footer
  class="bg-base-300 border-t border-base-300 text-base-content/70 text-sm h-24 sm:h-20 md:h-16"
>
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 flex flex-col items-center justify-center md:flex-row md:justify-between gap-1 h-full"
  >
    <div class="flex items-center justify-center gap-1 flex-wrap">
      <Copyright class="size-4" />
      <span data-copyright-year>2025</span>
      <span>Szarvas Pongr√°c</span>
    </div>
    <div class="flex flex-col items-center gap-1 sm:gap-4 sm:flex-row">
      <a
        href="mailto:szarvas.pongrac@gmail.com"
        class="flex items-center hover:link hover:text-base-content text-sm transition-colors gap-1"
      >
        <Mail class="size-4" />
        szarvas.pongrac@gmail.com
      </a>
      <a
        href="tel:+36204976222"
        class="flex items-center hover:link hover:text-base-content text-sm transition-colors gap-1"
      >
        <Phone class="size-4" />
        +36204976222
      </a>
    </div>
  </div>
</footer>

<script>
  // Dynamic copyright year
  const currentYear = new Date().getFullYear();
  const yearElement = document.querySelector("[data-copyright-year]");

  if (yearElement) {
    if (currentYear === 2025) {
      yearElement.textContent = "2025";
    } else {
      yearElement.textContent = `2025-${currentYear}`;
    }
  }
</script>
