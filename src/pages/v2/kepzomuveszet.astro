---
import V2Layout from "../../layouts/V2Layout.astro";
import ArtCard from "../../components/v2/ArtCard.astro";
import Footer from "../../components/v2/Footer.astro";
---

<V2Layout
  title="Képzőművészet - Szarvas Pongrác"
  description="Szarvas Pongrác képzőművészeti alkotásai"
>
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Képzőművészet
        </h1>
      </div>

      <div
        class="grid place-items-center w-fit mx-auto grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8"
      >
        <ArtCard
          href="/v2/kepzomuveszet/olaj"
          imageSrc="/images/a.jpg"
          imageAlt="Olajfestmények"
          title="Olajfestmények"
        />

        <ArtCard
          href="/v2/kepzomuveszet/akvarell"
          imageSrc="/images/b.jpg"
          imageAlt="Akvarellek"
          title="Akvarellek"
        />

        <ArtCard
          href="/v2/kepzomuveszet/pasztell"
          imageSrc="/images/c.jpg"
          imageAlt="Pasztellek"
          title="Pasztellek"
        />

        <ArtCard
          href="/v2/kepzomuveszet/grafika"
          imageSrc="/images/d.jpg"
          imageAlt="Grafikák"
          title="Grafikák"
        />
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</V2Layout>
