---
import V2Layout from "../../../layouts/V2Layout.astro";
import ImageGalleryV2 from "../../../components/ImageGalleryV2.astro";

const watercolors = [
  "/images/kepek/akva01.jpg",
  "/images/kepek/akva02.jpg",
  "/images/kepek/akva03.jpg",
  "/images/kepek/akva11.jpg",
  "/images/kepek/akva12.jpg",
  "/images/kepek/akva10.jpg",
  "/images/kepek/akva08.jpg",
  "/images/kepek/akva04.jpg",
  "/images/kepek/akva05.jpg",
  "/images/kepek/akva06.jpg",
  "/images/kepek/akva07.jpg",
];
---

<V2Layout
  title="Akvarellek - Szarvas Pongrác"
  description="Szarvas Pongrác akvarelljeinek gyűjteménye"
>
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Akvarellek
        </h1>
        <p class="text-lg text-gray-600">
          Természet és vadászat témájú akvarell festmények
        </p>
      </div>

      <!-- Image Gallery -->
      <ImageGalleryV2 images={watercolors} title="Akvarell" />

      <!-- Back Navigation -->
      <div class="mt-12 text-center">
        <a
          href="/v2/kepzomuveszet"
          class="inline-flex items-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            ></path>
          </svg>
          Vissza a Képzőművészethez
        </a>
      </div>
    </div>
  </section>
</V2Layout>