---
import Footer from "../../../components/v2/Footer.astro";
import ImageGallery from "../../../components/v2/ImageGallery.astro";
import V2Layout from "../../../layouts/V2Layout.astro";

const graphics = [
  "/images/kepek/grafika03.jpg",
  "/images/kepek/grafika06.jpg",
  "/images/kepek/grafika07.jpg",
  "/images/kepek/grafika09.jpg",
  "/images/kepek/grafika10.jpg",
  "/images/kepek/grafika11.jpg",
  "/images/kepek/grafika12.jpg",
  "/images/kepek/grafika13.jpg",
  "/images/kepek/grafika14.jpg",
  "/images/kepek/grafika15.jpg",
  "/images/kepek/grafika16.jpg",
  "/images/kepek/grafika17.jpg",
  "/images/kepek/grafika19.jpg",
  "/images/kepek/grafika20.jpg",
  "/images/kepek/grafika21.jpg",
];
---

<V2Layout
  title="Grafikák - Szarvas Pongrác"
  description="Szarvas Pongrác grafikai munkái"
>
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Grafikák
        </h1>
      </div>

      <!-- Image Gallery -->
      <ImageGallery
        images={graphics}
        title="Grafika"
      />

      <!-- Back Navigation -->
      <div class="mt-12 text-center">
        <a
          href="/v2/kepzomuveszet"
          class="inline-flex items-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors duration-200"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            ></path>
          </svg>
          Vissza a Képzőművészethez
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</V2Layout>
