---
import V2Layout from "../../../layouts/V2Layout.astro";
import ImageGalleryV2 from "../../../components/ImageGalleryV2.astro";

const oilPaintings = [
  "/images/kepek/olaj01.jpg",
  "/images/kepek/olaj02.jpg",
  "/images/kepek/olaj03.jpg",
  "/images/kepek/olaj05.jpg",
  "/images/kepek/olaj07.jpg",
  "/images/kepek/olaj08.jpg",
  "/images/kepek/olaj09.jpg",
  "/images/kepek/olaj10.jpg",
  "/images/kepek/olaj11.jpg",
  "/images/kepek/olaj12.jpg",
  "/images/kepek/olaj13.jpg",
  "/images/kepek/olaj14.jpg",
  "/images/kepek/olaj15.jpg",
  "/images/kepek/olaj16.jpg",
