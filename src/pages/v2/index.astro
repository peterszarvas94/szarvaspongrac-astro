---
import V2Layout from "../../layouts/V2Layout.astro";
import NavigationCard from "../../components/v2/NavigationCard.astro";
import { BookUser, Palette, Mail } from "@lucide/astro";
import Footer from "../../components/v2/Footer.astro";
---

<V2Layout
  title="Szarvas Pongrác - Grafikus, Festő, Illusztrátor"
  description="Szarvas Pongrác grafikus, festő, illusztrátor honlapja - Modern verzió"
>
  <!-- Hero Section -->
  <section
    class="relative min-h-[70vh] bg-cover bg-center bg-no-repeat flex items-center justify-center"
    style="background-image: url('/images/szarvasok.jpg');"
  >
    <!-- Dark overlay for text readability -->
    <div class="absolute inset-0 bg-neutral/40"></div>

    <!-- Hero Content -->
    <div
      class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto"
    >
      <h1 class="text-4xl md:text-6xl font-bold text-base-100 mb-6">
        Szarvas Pongrác
      </h1>
      <p class="text-xl md:text-2xl text-base-100/90 mb-8">
        Grafikus • Festő • Illusztrátor
      </p>
      <p class="text-lg text-base-100/80 max-w-2xl mx-auto">
        Természet és vadászat témájú alkotások
      </p>
    </div>
  </section>

  <!-- Navigation Cards -->
  <section class="py-8 bg-base-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid mx-auto grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        <NavigationCard
          href="/v2/eletrajz"
          title="Életrajz"
          icon={BookUser}
          hoverColor="primary"
        />

        <NavigationCard
          href="/v2/kepzomuveszet"
          title="Képzőművészet"
          icon={Palette}
          hoverColor="secondary"
        />

        <NavigationCard
          href="/v2/kapcsolat"
          title="Kapcsolat"
          icon={Mail}
          hoverColor="accent"
        />
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</V2Layout>
